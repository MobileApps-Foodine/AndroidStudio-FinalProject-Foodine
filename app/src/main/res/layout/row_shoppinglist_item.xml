<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:id="@+id/row_shoppinglist_item_layout">

    <ImageView
        android:id="@+id/row_shoppinglist_item_drag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.05"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:scaleType="centerInside"
        android:scaleY="1.5"
        android:scaleX="1.5" />

<!--    android:src="@drawable/ic_drag"-->

    <CheckBox
        android:id="@+id/row_shoppinglist_item_check"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_gravity="center|top"/>

    <EditText
        android:id="@+id/row_shoppinglist_item_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:background="@null"
        android:hint="Item"
        style="?attr/textAppearanceSubtitle2"
        android:lineSpacingExtra="1.5dp"
        android:inputType="text"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/subviewPadding"/>

    <EditText
        android:id="@+id/row_shoppinglist_item_quantity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="@null"
        android:hint="Qty"
        style="?attr/textAppearanceSubtitle2"
        android:maxLines="1"
        android:inputType="number"
        android:layout_gravity="top"
        android:layout_marginRight="@dimen/subviewPadding" />


    <ImageView
        android:id="@+id/row_shoppinglist_item_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:src="@drawable/ic_close"
        android:layout_gravity="top"
        android:foregroundGravity="center"
        android:layout_marginTop="@dimen/viewPadding"/>

</LinearLayout>