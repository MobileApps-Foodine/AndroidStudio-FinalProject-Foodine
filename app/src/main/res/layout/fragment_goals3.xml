<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Goals.Goals3Fragment">

<!--    TODO : make edittext with color -->
    <LinearLayout
        android:id="@+id/goals_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/layoutPadding">

        <TextView
            android:id="@+id/goals_profile_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/textAppearanceSubtitle1"
            android:textColor="?attr/colorOnPrimary"
            android:text="Your current condition :"
            android:layout_marginBottom="@dimen/subviewPadding"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/goals_profile_gender"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/logo_launcher_round"
                android:layout_margin="@dimen/viewPadding"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/goals_profile_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/goals_profile_gender"
                android:layout_marginHorizontal="12dp"
                android:text="Name"
                style="?attr/textAppearanceSubtitle2"
                android:textColor="?attr/colorPrimary"
                android:textAlignment="center"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/goals_profile_age"
                style="@style/parent"
                android:layout_toRightOf="@id/goals_profile_gender">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/goals_profile_age_editText"
                    style="@style/modifiedEditText"
                    android:singleLine="true"
                    android:hint="Age"
                    android:drawableStart="@drawable/ic_dob"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/goals_profile_weight"
                android:layout_below="@id/goals_profile_age"
                android:layout_toRightOf="@id/goals_profile_gender"
                android:layout_marginTop="@dimen/viewPadding"
                style="@style/parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/goals_profile_weight_editText"
                    style="@style/modifiedEditText"
                    android:singleLine="true"
                    android:hint="Weight"
                    android:drawableStart="@drawable/ic_weight"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/goals_profile_height"
                android:layout_below="@id/goals_profile_weight"
                android:layout_toRightOf="@id/goals_profile_gender"
                android:layout_marginTop="@dimen/viewPadding"
                style="@style/parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/goals_profile_height_editText"
                    style="@style/modifiedEditText"
                    android:singleLine="true"
                    android:hint="Height"
                    android:drawableStart="@drawable/ic_ruler"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goals_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
