<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SetGoals.Goals2Fragment">

    <RelativeLayout
        android:id="@+id/goals_profile_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layoutPadding">

        <TextView
            android:id="@+id/goals_profile_weight_header"
            style="?attr/textAppearanceHeadline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="How much do you weight?"
            android:textColor="?attr/colorOnPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <LinearLayout
            android:id="@+id/goals_profile_weight_ruler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ruler"
            android:layout_below="@id/goals_profile_weight_header"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="@dimen/subviewPadding">

            <com.neobaran.open.android.nruler.RulerView
                android:id="@+id/goals_profile_weight_scale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:centerLineColor="@color/teal_700"
                app:centerLineHeight="32dp"
                app:numDigits="1"
                app:numMaxValue="150"
                app:numMinValue="0"
                app:numShow="75"
                app:numTextColor="@color/black"
                app:numValue="40"
                app:sideLineColor="#bcbcbc"
                app:sideLineHeight="20dp"
                app:textSize="16sp"
                app:textSpaceHeight="16dp"
                android:layout_marginHorizontal="@dimen/layoutPadding"
                android:layout_marginTop="@dimen/subviewPadding"/>
        </LinearLayout>

        <TextView
            android:id="@+id/goals_profile_weight_txt"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="kg"
            android:textColor="?attr/colorPrimary"
            android:layout_below="@id/goals_profile_weight_ruler"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/goals_profile_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layoutPadding"
        android:layout_below="@id/goals_profile_weight">

        <TextView
            android:id="@+id/goals_profile_height_header"
            style="?attr/textAppearanceHeadline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="How tall are you?"
            android:textColor="?attr/colorOnPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <LinearLayout
            android:id="@+id/goals_profile_height_ruler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ruler"
            android:layout_below="@id/goals_profile_height_header"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="@dimen/subviewPadding">

            <com.neobaran.open.android.nruler.RulerView
                android:id="@+id/goals_profile_height_scale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:centerLineColor="@color/teal_700"
                app:centerLineHeight="32dp"
                app:numDigits="1"
                app:numMaxValue="220"
                app:numMinValue="0"
                app:numShow="50"
                app:numTextColor="@color/black"
                app:numValue="150"
                app:sideLineColor="#bcbcbc"
                app:sideLineHeight="20dp"
                app:textSize="16sp"
                app:textSpaceHeight="16dp"
                android:layout_marginHorizontal="@dimen/layoutPadding"
                android:layout_marginTop="@dimen/subviewPadding"/>
        </LinearLayout>

        <TextView
            android:id="@+id/goals_profile_height_txt"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="cm"
            android:textColor="?attr/colorPrimary"
            android:layout_below="@id/goals_profile_height_ruler"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>