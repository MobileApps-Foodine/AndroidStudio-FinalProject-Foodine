<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignInUp.OnBoarding.OnBoarding3Fragment"
    android:padding="@dimen/layoutPadding"
    android:background="@color/sec_green_light">

    <include
        android:id="@+id/onboard3_statusbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/transparent_status_bar" />

    <ImageView
        android:id="@+id/onboard3_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/onboard3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboard3_statusbar"
        app:layout_constraintHorizontal_bias=".2"
        app:layout_constraintVertical_bias=".3"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/onboard3_app"
        style="?attr/textAppearanceHeadline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foodine"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@id/onboard3_img"
        app:layout_constraintStart_toStartOf="@id/onboard3_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/onboard3_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        style="?attr/textAppearanceBody1"
        app:layout_constraintBottom_toBottomOf="@id/onboard3_app"
        app:layout_constraintStart_toEndOf="@id/onboard3_app"
        app:layout_constraintTop_toTopOf="@id/onboard3_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9" />

    <TextView
        android:id="@+id/onboard3_head1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Determine Your"
        style="?attr/textAppearanceHeadline4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/onboard3_img"
        app:layout_constraintTop_toBottomOf="@id/onboard3_img"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/onboard3_head2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Plan"
        style="?attr/textAppearanceHeadline3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/onboard3_head1"
        app:layout_constraintTop_toBottomOf="@id/onboard3_head1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/onboard3_body"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?attr/textAppearanceSubtitle1"
        android:text="Keep track of daily calories and nutrition to achieve your ideal body"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/onboard3_head2"
        app:layout_constraintTop_toBottomOf="@id/onboard3_head2"
        android:layout_marginTop="4dp"/>

    <LinearLayout
        android:id="@+id/onboard3_bullet"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/onboard3_body"
        app:layout_constraintTop_toBottomOf="@id/onboard3_body"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0.6"
        android:layout_marginLeft="4dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle2"
            app:tint="@color/black"
            android:contentDescription="TODO" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle2"
            app:tint="@color/black"
            android:contentDescription="TODO" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle"
            app:tint="@color/black"
            android:contentDescription="TODO" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>